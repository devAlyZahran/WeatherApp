@model CityWeather

<html>
    <head>
        <meta charset="utf-8" />
        <title>Weather</title>
        <link rel="stylesheet" href="/css/StyleSheet.css" />
    </head>
    <body>
        <div class="container">
        <h1>Weather</h1>
        <div class="weather-cards">
            @{
                string x = string.Empty;
                if (Model.TemperatureFahrenheit < 44)
                {
                    x = "bg-blue";
                }
                else if (Model.TemperatureFahrenheit > 44 && Model.TemperatureFahrenheit <= 74)
                {
                    x = "bg-green";
                }
                else if (Model.TemperatureFahrenheit > 74)
                {
                    x = "bg-yellow";
                }
            }
                

                <div class="card @x">
                    <h2>@Model.CityName</h2>
                    <p class="time">@Model.DateAndTime.Date.ToString("dd MMM yyyy")</p>
                    <p class="time">@Model.DateAndTime.ToShortTimeString()</p>
                    <p class="temp">@Model.TemperatureFahrenheit °F</p>
                    <a href="/" class="back-link">Back to Weather Home Page</a>
                </div>
            
        </div>
    </div>
    </body>
</html>